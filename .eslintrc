{
  "parser": "babel-eslint",
  "extends": "airbnb",
  "env": {
    "browser": true,
    "mocha": true,
    "node": true
  },
  "rules": {
    "no-console": "off",
    "class-methods-use-this": "off",
    "comma-dangle": ["warn", "never"],
    "max-len": "off",
    "no-underscore-dangle": "off",
    "react/prefer-stateless-function": "off",
    "react/sort-comp": "off",
    "semi": ["warn", "never"]
  },
  "plugins": [
    "import",
    "react"
  ],
  "settings": {
    "import/resolver": {
      "webpack": {
        config: 'webpack.config.base.js'
      }
    }
  }
}
